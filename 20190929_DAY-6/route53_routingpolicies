

#!/bin/bash
cd /opt/
yum install wget* curl* vim* unzip* -y
yum update -y
yum install http* --skip-broken -y
service httpd start
chkconfig httpd on
echo "Welcome to Mumbai-Server" >> /var/www/html/index.html

